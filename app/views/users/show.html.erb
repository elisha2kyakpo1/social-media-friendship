<section class="user-section">
  <h2><%= "Name: #{@user.name}" %> | 
  <small> 
    <% if current_user.friend?(@user) %>
      You are friends | <%= link_to 'Delete', delete_friends_user_path(@user) %>
    <% elsif current_user.friend_requests.include?(@user) %>
      Incoming Request | <%= link_to 'Accept', confirm_friends_user_path(@user) %> | <%= link_to 'Ignore' %>
    <% elsif current_user.pending_friends.include?(@user) %>
      Pending request    
    <% else %>
      <%= link_to 'Friend Request', create_friendship_user_path(@user), class: 'profile-link' %>
    <% end %>
  </small>
  </h2>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>  
</section>

